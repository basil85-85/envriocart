<!DOCTYPE html>
<html>
<head>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
  <style>
    :root {
      --tshirt-color: #FF6B6B;
      --shoes-color: #4ECDC4;
      --bag-color: #45B7D1;
      --socks-color: #96CEB4;
      --hat-color: #FFEEAD;
      --vest-color: #D4A5A5;
      --pants-color: #9B59B6;
      --jacket-color: #3498DB;
      --dress-color: #FF69B4;
    }

    .select-container {
      position: relative;
      width: 300px;
      font-family: system-ui, -apple-system, sans-serif;
    }

    .select-button {
      width: 100%;
      padding: 12px 20px;
      font-size: 16px;
      background: white;
      border: 2px solid #e2e8f0;
      border-radius: 12px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: all 0.3s;
    }

    .select-button:hover {
      border-color: #94a3b8;
      transform: translateY(-1px);
    }

    .select-button:focus {
      outline: none;
      border-color: #3b82f6;
      box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
    }

    .category-icon {
      display: inline-flex;
      align-items: center;
      justify-content: center;
      width: 32px;
      height: 32px;
      border-radius: 8px;
      margin-right: 12px;
      transition: all 0.3s;
    }

    .dropdown-menu {
      position: absolute;
      top: calc(100% + 8px);
      left: 0;
      width: 100%;
      background: white;
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
      opacity: 0;
      visibility: hidden;
      transform: translateY(-10px);
      transition: all 0.3s;
      z-index: 100;
      padding: 8px;
    }

    .dropdown-menu.show {
      opacity: 1;
      visibility: visible;
      transform: translateY(0);
    }

    .dropdown-item {
      padding: 12px 16px;
      cursor: pointer;
      transition: all 0.3s;
      display: flex;
      align-items: center;
      border-radius: 8px;
      margin: 4px 0;
    }

    .dropdown-item:hover {
      background: #f8fafc;
      transform: translateX(5px);
    }

    .icon-container {
      width: 32px;
      height: 32px;
      display: flex;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
      margin-right: 12px;
      transition: all 0.3s;
    }

    .icon-container i {
      font-size: 18px;
      color: white;
    }

    /* Category-specific colors */
    .category-tshirt .icon-container {
      background: var(--tshirt-color);
    }

    .category-shoes .icon-container {
      background: var(--shoes-color);
    }

    .category-bag .icon-container {
      background: var(--bag-color);
    }

    .category-socks .icon-container {
      background: var(--socks-color);
    }

    .category-hat .icon-container {
      background: var(--hat-color);
    }

    .category-vest .icon-container {
      background: var(--vest-color);
    }

    .category-pants .icon-container {
      background: var(--pants-color);
    }

    .category-jacket .icon-container {
      background: var(--jacket-color);
    }

    .category-dress .icon-container {
      background: var(--dress-color);
    }
  </style>
</head>
<body>
  <div class="select-container">
    <button class="select-button" id="categoryButton">
      <span class="button-content">
        <span class="icon-container" style="background: var(--tshirt-color)">
          <i class="fas fa-tshirt" style="color: white;"></i>
        </span>
        Select Category
      </span>
    </button>
    <div class="dropdown-menu" id="dropdownMenu">
      <div class="dropdown-item category-tshirt">
        <span class="icon-container">
          <i class="fas fa-tshirt"></i>
        </span>
        T-Shirts & Tops
      </div>
      <div class="dropdown-item category-shoes">
        <span class="icon-container">
          <i class="fas fa-shoe-prints"></i>
        </span>
        Footwear
      </div>
      <div class="dropdown-item category-bag">
        <span class="icon-container">
          <i class="fas fa-shopping-bag"></i>
        </span>
        Bags & Accessories
      </div>
      <div class="dropdown-item category-socks">
        <span class="icon-container">
          <i class="fas fa-socks"></i>
        </span>
        Socks
      </div>
      <div class="dropdown-item category-hat">
        <span class="icon-container">
          <i class="fas fa-hat-cowboy"></i>
        </span>
        Hats & Caps
      </div>
      <div class="dropdown-item category-vest">
        <span class="icon-container">
          <i class="fas fa-vest"></i>
        </span>
        Vests
      </div>
      <div class="dropdown-item category-pants">
        <span class="icon-container">
          <i class="fas fa-ruler-vertical"></i>
        </span>
        Pants & Shorts
      </div>
      <div class="dropdown-item category-jacket">
        <span class="icon-container">
          <i class="fas fa-user-tie"></i>
        </span>
        Jackets
      </div>
      <div class="dropdown-item category-dress">
        <span class="icon-container">
          <i class="fas fa-female"></i>
        </span>
        Dresses
      </div>
    </div>
  </div>

  <script>
    const button = document.getElementById('categoryButton');
    const buttonContent = button.querySelector('.button-content');
    const menu = document.getElementById('dropdownMenu');
    const items = document.querySelectorAll('.dropdown-item');

    button.addEventListener('click', () => {
      button.classList.toggle('open');
      menu.classList.toggle('show');
    });

    items.forEach(item => {
      item.addEventListener('click', () => {
        const iconContainer = item.querySelector('.icon-container').cloneNode(true);
        buttonContent.innerHTML = '';
        buttonContent.appendChild(iconContainer);
        buttonContent.appendChild(document.createTextNode(item.textContent.trim()));
        button.classList.remove('open');
        menu.classList.remove('show');
      });
    });

    document.addEventListener('click', (e) => {
      if (!button.contains(e.target) && !menu.contains(e.target)) {
        button.classList.remove('open');
        menu.classList.remove('show');
      }
    });
  </script>
</body>
</html>